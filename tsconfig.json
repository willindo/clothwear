{
  "compilerOptions": {
    "module": "commonjs", // ðŸ‘ˆ NestJS expects commonjs
    "moduleResolution": "node",
    "target": "es2017",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      // "express",
      "jest"
    ],
  },
  // "include": [
  //   "src/**/*.ts",
  //   "types/**/*.d.ts"
  // ],
}